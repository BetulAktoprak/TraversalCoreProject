@model TraversalCoreProject.Areas.Member.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Profil Düzenleme Sayfası</h3>
<br />
<form method="post" enctype="multipart/form-data" >
    @Html.Label("Adı")
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    @Html.Label("Soyadı")
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    @Html.Label("Mail Adresi")
    <input type="email" asp-for="Mail" class="form-control" />
    <br />
    @Html.Label("Şifre")
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("Şİfre Tekrar")
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />
    @Html.Label("Telefon Numarası")
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="Image" />
    </div>
    <br />
    <button class="btn btn-primary">Bilgileri Güncelle</button>
</form>

