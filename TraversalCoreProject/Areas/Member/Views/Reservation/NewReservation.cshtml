@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div id="infoModal" class="modal" style="display: block;">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır. Rezervasyon onaylanma süreci için "Güncel Rezervasyonlarım" menüsünü takip etmeyi unutmayın.</p>
        <button onclick="closeInfoModal()" class="btn btn-primary">Tamam</button>
    </div>
</div>

<script>
    function openInfoModal() {
        var modal = document.getElementById("infoModal");
        modal.style.display = "block";
    }
    function closeInfoModal() {
        var modal = document.getElementById("infoModal");
        modal.style.display = "none";
    }

    var closeBtn = document.querySelector("#infoModal .close");
    closeBtn.onclick = function () {
        closeInfoModal();
    };

    window.onclick = function (event) {
        var modal = document.getElementById("infoModal");
        if (event.target == modal) {
            closeInfoModal();
        }
    };
</script>


<h3>Yeni Rezervasyon</h3>
<form method="post">
    <div class="form-group">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="PersonCount" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="date" asp-for="ReservationDate" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Varsa Eklemek İstedikleriniz")
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>
    <button class="btn btn-outline-success">Rezervasyon Yap</button>
</form>

