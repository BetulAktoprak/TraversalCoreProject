@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Aktif Tur Rotalarımız</h3>
<br />
<table class="table table-hover" style="background-color: aliceblue; color: black;">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Şehir</th>
            <th scope="col">Süre</th>
            <th scope="col">Kapasite</th>
            <th scope="col">Ücret</th>
            <th scope="col">Detaylar</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DestinationID</td>
                <td>@item.City</td>
                <td>@item.DayNight</td>
                <td>@item.Capacity</td>
                <td>@item.Price$</td>
                <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>

